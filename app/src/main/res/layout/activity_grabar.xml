<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/reloj"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Grabar">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/grabar_stop"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/inicio"
            android:onClick="btn_iniciar"
            android:scaleType="centerCrop" />

        <Button
            android:id="@+id/Repoducir"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/pausar"
            android:onClick="btn_reproducir"
            android:scaleType="centerCrop" />

        <Button
            android:id="@+id/Siguiente"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/siguiente"
            android:onClick="btn_siguiente"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <TextView
        android:id="@+id/contador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="serif-monospace"
        android:gravity="center_horizontal"
        android:text="CONTADOR"
        android:textColor="@color/colorAccent"
        android:textSize="60dp" />

    <ImageView
        android:id="@+id/clave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/notas" />


</LinearLayout>